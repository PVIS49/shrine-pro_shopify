<div id="cvs-{{ section.id }}-{{ block.id }}" class="custom-variant-selector">

  {% assign displayed_variants = product.variants | slice: 0, 3 %}

  {% for variant in displayed_variants %}
    <label class="custom-variant-selector__block{% if forloop.first %} selected{% endif %}"
       data-variant-id="{{ variant.id }}"
       data-o1="{{ variant.option1 | escape }}"
       data-o2="{{ variant.option2 | escape }}"
       data-o3="{{ variant.option3 | escape }}">

      <span class="variant-indicator"></span>
      <input type="radio" name="custom_variant_id" class="hidden-radio" value="{{ variant.id }}" {% if forloop.first %}checked{% endif %}>
      <div class="variant-card">
        {% if forloop.index == 2 %}
  <div class="variant-badge">Économisez 50€</div>
{% endif %}

    {% if variant.metafields.custom.custom_image %}
  <img
    src="{{ variant.metafields.custom.custom_image | image_url: width: 300 }}"
    alt="{{ variant.title }}"
    class="{% if forloop.index == 1 %}img-small{% else %}img-large{% endif %}">
{% elsif variant.featured_media %}
  <img
    src="{{ variant.featured_media.preview_image | image_url: width: 300 }}"
    alt="{{ variant.title }}"
    class="{% if forloop.index == 1 %}img-small{% else %}img-large{% endif %}">
{% endif %}


        <p class="variant-label">{{ variant.title }}</p>
<div class="variant-price">
  {% if variant.compare_at_price > variant.price %}
    <span class="old-price">{{ variant.compare_at_price | money }}</span>
  {% endif %}
  <span class="current-price">{{ variant.price | money }}</span>
</div>
      </div>
    </label>
  {% endfor %}
</div>

<style>
.custom-variant-selector{
  display:grid;
  grid-template-columns:repeat(2,minmax(0,1fr)); /* deux colonnes permanentes */
  gap:12px;
  margin-top:20px;
}
  .hidden-radio {
  display: none;
}


/* chaque carte occupe exactement sa colonne */
.custom-variant-selector__block{
  width:100%;                 /* ← la grille gère la largeur */
  box-sizing:border-box;
  border:2px solid #ccc;
  border-radius:10px;
  padding:10px;
  text-align:center;
  position:relative;
  cursor:pointer;
  transition:all .2s ease;
}
.variant-card {
  display: flex;
  flex-direction: column;
  justify-content: flex-end; /* aligne le contenu vers le bas */
  height: 150px; /* fixe une même hauteur pour toutes les cartes */
}

.variant-card img.img-small {
  height: 50px;
  object-fit: contain;
  align-self: center;
}

.variant-card img.img-large {
  height: 70px;
  object-fit: contain;
  align-self: center;
}

.custom-variant-selector__block.selected{
  border-color:#000;
  background:#f6f6f6;
}

/*  décorations inchangées  */
.variant-badge {
  position: absolute;
  top: 6px;
  left: 50%;
  transform: translateX(-50%);
  background: #1A1A1A;
  color: white;
  padding: 4px 10px;
  font-size: 12px;
  border-radius: 6px;
  white-space: nowrap;       /* empêche le retour à la ligne */
  overflow: hidden;          /* masque le débordement */
  text-overflow: ellipsis;   /* ajoute "..." si trop long */
  max-width: 90%;            /* limite la largeur */
  z-index: 2;
}
  .variant-price {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 6px;
  margin-top: 4px;
  font-size: 14px;
}

.old-price {
  text-decoration: line-through;
  color: #999;
  font-size: 14px;
}

.current-price {
  font-weight: bold;
  color: #000;
}


.variant-indicator{
  width:10px;height:10px;border-radius:50%;
  border:2px solid #000;position:absolute;top:10px;right:10px;
}
.custom-variant-selector__block.selected .variant-indicator{background:#000}

</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const root = document.getElementById("cvs-{{ section.id }}-{{ block.id }}") 
              || document.querySelector(".custom-variant-selector");
    if (!root) return;

    // Le formulaire produit de CETTE section
    const form =
      document.getElementById("product-form-{{ section.id }}") ||
      root.closest("section")?.querySelector('form[action*="/cart/add"]');
    if (!form) return;

    // Les champs que le thème lit pour connaître la variante
    const variantSelect = form.querySelector('select[name="id"]');
    const variantInput  = form.querySelector('input[name="id"]');

    // État courant de la variante choisie via tes cartes
    let selectedVariantId =
      (variantSelect && variantSelect.value) ||
      (variantInput && variantInput.value) ||
      "{{ product.selected_or_first_available_variant.id }}";

    function setVariant(variantId, cardEl) {
  selectedVariantId = String(variantId);

  // --- 1) Synchroniser les options natives (radios / selects "options[ ]")
  const optionRadios = Array.from(form.querySelectorAll('input[type="radio"][name^="options["]'));
  const optionSelects = Array.from(form.querySelectorAll('select[name^="options["]'));
  if (cardEl && (optionRadios.length || optionSelects.length)) {
    const desired = [cardEl.dataset.o1, cardEl.dataset.o2, cardEl.dataset.o3].filter(Boolean);

    // Groupes de radios par name (dans l'ordre options[1], options[2], ...)
    if (optionRadios.length) {
      const groups = {};
      optionRadios.forEach(r => (groups[r.name] ||= []).push(r));
      Object.values(groups).forEach((inputs, idx) => {
        const want = desired[idx];
        if (!want) return;
        const target = inputs.find(i => i.value === want && !i.disabled);
        if (target && !target.checked) {
          target.click(); // déclenche les handlers du thème
        }
      });
    }

    // Selects d'options
    if (optionSelects.length) {
      optionSelects.forEach((sel, idx) => {
        const want = desired[idx];
        if (!want) return;
        if (sel.value !== want) {
          sel.value = want;
          sel.dispatchEvent(new Event('change', { bubbles: true }));
          sel.dispatchEvent(new Event('input', { bubbles: true }));
        }
      });
    }
  }

  // --- 2) Mettre à jour le champ name="id" (select ou input)
  if (variantSelect) {
    if (String(variantSelect.value) !== selectedVariantId) {
      variantSelect.value = selectedVariantId;
      variantSelect.dispatchEvent(new Event('change', { bubbles: true }));
      variantSelect.dispatchEvent(new Event('input',  { bubbles: true }));
    }
  } else if (variantInput) {
    variantInput.value = selectedVariantId;
    form.dispatchEvent(new Event('change', { bubbles: true }));
    form.dispatchEvent(new Event('input',  { bubbles: true }));
  } else {
    // Fallback : créer un input hidden si rien n'existe
    const hidden = document.createElement('input');
    hidden.type  = 'hidden';
    hidden.name  = 'id';
    hidden.value = selectedVariantId;
    form.appendChild(hidden);
  }

  // Certains thèmes lisent un dataset
  form.dataset.selectedVariantId = selectedVariantId;

  // --- 3) UI locale (bordure/état sélectionné)
  const all = root.querySelectorAll('.custom-variant-selector__block');
  all.forEach(c => c.classList.toggle('selected', c.getAttribute('data-variant-id') === selectedVariantId));
}


    // Clic sur une carte -> sélectionne la variante
    const blocks = root.querySelectorAll(".custom-variant-selector__block");
    blocks.forEach((block) => {
  block.addEventListener("click", function () {
    const variantId = this.getAttribute("data-variant-id");
    if (!variantId) return;

    const radio = this.querySelector('input[type="radio"]');
    if (radio) radio.checked = true;

    setVariant(variantId, this); // ← on passe la carte pour synchroniser les options
  });
});


    // Init UI locale en fonction de l’état natif
    (function initUI(){
      const initialCard = root.querySelector('[data-variant-id="'+ String(selectedVariantId) +'"]');
      if (initialCard) {
        blocks.forEach((b) => b.classList.remove("selected"));
        initialCard.classList.add("selected");
        const r = initialCard.querySelector('input[type="radio"]');
        if (r) r.checked = true;
      }
    })();

    // ⚠️ Garde la bonne variante AU MOMENT DU SUBMIT (ATC & Acheter maintenant)
    form.addEventListener("submit", function (e) {
      // (1) Réécrit la valeur avant que le thème ne lise le champ
      if (variantSelect) {
        variantSelect.value = selectedVariantId;
        variantSelect.dispatchEvent(new Event("change", { bubbles: true }));
        variantSelect.dispatchEvent(new Event("input",  { bubbles: true }));
      } else if (variantInput) {
        variantInput.value = selectedVariantId;
        // sur certains thèmes, seule la valeur suffit pour /cart/add
      }

      // (2) Petites sécurités supplémentaires
      form.dataset.selectedVariantId = selectedVariantId;
      const addBtn = form.querySelector('[type="submit"]');
      if (addBtn && addBtn.disabled) addBtn.disabled = false;
    }, true); // useCapture = true pour passer AVANT les handlers du thème
  });
</script>
